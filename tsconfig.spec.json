{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "types": ["jest", "node"],
        "jsx": "react",
        "moduleResolution": "node"
    },
    "include": [
        "./jest.config.ts",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/*.test.tsx",
        "**/*.spec.tsx",
        "**/*.test.js",
        "**/*.spec.js",
        "**/*.test.jsx",
        "**/*.spec.jsx",
        "**/*.d.ts"
    ]
}
